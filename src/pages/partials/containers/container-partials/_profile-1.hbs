{{!-- 
    A bar containing user profile avatar and username. The avatar
    floats on the border of the profile-bar div and it's predesessor.

    Variables:
    - img: source for avatar image.
    - usr: Username

--}}

<div class="profile-bar bg-primary p-3">
    <div class="row">
        <div class="col-lg-4 text-center" style="height:100px;">
            <img src="{{ src }}"  width="180" height="180" alt="" class="rounded-circle avatar"/>
        </div>
        <div class="col-lg-4 text-center mt-2">
            <h1 class="text-white">{{ usr }}</h1>
        </div>
        <div class="col-lg-4 text-center mt-5">
            <a class="mdi mdi-heart mdi-36px text-danger" href="/"></a>
        </div>
    </div>
</div>